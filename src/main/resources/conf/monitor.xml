<monitor>
    <name>url-pinger-monitor</name>
    <type>managed</type>
    <description>Url Pinger Monitoring Extension</description>
    <monitor-configuration></monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
        <name>Url Pinger Monitor Run task</name>
        <display-name>Url Pinger Monitor Run task</display-name>
        <description>An extension to get health checks for urls.</description>
        <type>java</type>
        <execution-timeout-in-secs>60</execution-timeout-in-secs>
        <task-arguments>
            <!-- proxy settings -->
            <argument name="proxy-host" is-required="false" default-value=""/>
            <argument name="proxy-port" is-required="false" default-value=""/>
            <argument name="proxy-username" is-required="false" default-value=""/>
            <argument name="proxy-password" is-required="false" default-value=""/>

            <argument name="metric-prefix" is-required="false" default-value="Custom Metrics|UrlPinger|"/>
        </task-arguments>
        <java-task>
            <classpath>url-pinger-monitoring-extension.jar</classpath>
            <impl-class>com.appdynamics.extensions.urlpinger.UrlPingerMonitor</impl-class>
        </java-task>
    </monitor-run-task>
</monitor>